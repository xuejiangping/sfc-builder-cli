{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "_build json 结构",
  "type": "object",
  "required": [
    "ids",
    "components"
  ],
  "properties": {
    "ids": {
      "type": "array",
      "description": "List of component IDs",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "components": {
      "type": "object",
      "description": "Component definitions with dynamic keys",
      "additionalProperties": {
        "type": "object",
        "required": [
          "scriptStr",
          "styleStr",
          "updateTime",
          "hash"
        ],
        "properties": {
          "scriptStr": {
            "type": "string",
            "description": "JavaScript code or script content"
          },
          "styleStr": {
            "type": "string",
            "default": "",
            "description": "CSS style content (optional)"
          },
          "updateTime": {
            "type": "string",
            "description": "Last update timestamp"
          },
          "hash": {
            "type": "string",
            "description": "Hash of the component (no format restriction)"
          }
        },
        "additionalProperties": false
      }
    }
  }
}