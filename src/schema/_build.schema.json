{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "_build json 结构",
  "type": "object",
  "required": [
    "ids",
    "components"
  ],
  "properties": {
    "ids": {
      "type": "array",
      "description": "组件id 数组",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "components": {
      "type": "object",
      "description": "组件元信息",
      "additionalProperties": {
        "type": "object",
        "required": [
          "scriptStr",
          "styleStr",
          "updateTime",
          "hash"
        ],
        "properties": {
          "scriptStr": {
            "type": "string",
            "description": "组件script 部分"
          },
          "styleStr": {
            "type": "string",
            "description": "组件style 部分"
          },
          "updateTime": {
            "type": "string",
            "description": "组件上次更新时间"
          },
          "hash": {
            "type": "string",
            "description": "组件文件hash值"
          }
        },
        "additionalProperties": false
      }
    }
  }
}